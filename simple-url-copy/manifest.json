{
    "name": "Simple URL Copy",
    "description": "Helps to copy url with various formats",
    "author": "@ikedaosushi",
    "version": "1.0.0.4",
    "manifest_version": 3,
    "icons": {
        "16": "icons/16.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/16.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "MacCtrl+Shift+C"
            },
            "description": "Opens popup.html"
        }
    },
    "permissions": ["tabs"],
    "content_security_policy": {
	"extention_pagers": "script-src 'self' ./mdl; object-src 'self'",
    	"devtools_page": "popup.html"
	}
}
